# --- Telegram (obligatorio) ---
BOT_TOKEN="123456789:AAExampleTokenReplaceMe"
CHAT_ID="123456789" # puede ser usuario, grupo (-100...) o canal

# --- Identidad ---
SERVER_LABEL=""      # default: hostname
BOOT_EMOJI="true"    # true/false
BOOT_ALERTS_ONLY="false"  # true => enviar solo si hay WARN/CRIT

# --- Anti-duplicados ---
LOCK_TTL_SEC="900"           # ventana en segundos
BOOT_REPORT_RUNDIR="/run/boot-report"  # systemd RuntimeDirectory por defecto

# --- Thresholds (porcentaje) ---
WARN_DISK_PCT="85"
CRIT_DISK_PCT="95"
WARN_MEM_PCT="85"
CRIT_MEM_PCT="95"
WARN_LOAD_PER_CORE="1.50"
CRIT_LOAD_PER_CORE="2.50"

# --- Temperatura (Â°C) (opcional; requiere lm-sensors) ---
WARN_TEMP_C="70"
CRIT_TEMP_C="85"

# --- Networking ---
NET_CHECK_IP="1.1.1.1"
NET_CHECK_DNS="api.telegram.org"
